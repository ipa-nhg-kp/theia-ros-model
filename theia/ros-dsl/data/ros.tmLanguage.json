{
    "name": "ROSDSL",
    "scopeName": "source.ros",
    "fileTypes": [
        "ros"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "name": "storage.type.ros",
            "match": "\\b(PackageSet|Artifact|CatkinPackage|Node|Publisher|Subscriber|ServiceClient)\\b"
        },
        {
            "name": "keyword.control.ros",
            "match": "\\b(package|artifact|node|publisher|subscriber|name|serviceclient|message|service)\\b"
        },
        {
            "name": "string.quoted.double.ros",
            "begin": "\"",
            "end": "\""
        }

    ],    
    "repository": 
        {
            "comments": {
                "patterns": [
                    {
                        "name": "comment.block.states",
                        "begin": "/\\*",
                        "beginCaptures": {
                            "0": {
                                "name": "punctuation.definition.comment.states"
                            }
                        },
                        "end": "\\*/",
                        "endCaptures": {
                            "0": {
                                "name": "punctuation.definition.comment.states"
                            }
                        }
                    }, {
                        "begin": "(^\\s+)?(?=//)",
                        "beginCaptures": {
                            "1": {
                                "name": "punctuation.whitespace.comment.leading.cs"
                            }
                        },
                        "end": "(?=$)",
                        "name":"comment.line.states"
                    }
                ]
            }
        }
} 